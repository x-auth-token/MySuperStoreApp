<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="3"
    android:background="@drawable/grain"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".activity.LoginActivity">

    <include layout="@layout/base_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:alpha="1"
            android:gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/activity_login_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:alpha="0.7"
                android:autofillHints=""
                android:background="@drawable/rounded_text_field"
                android:ems="10"
                android:fontFamily="sans-serif-thin"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:onClick="emailInputValidation"
                android:outlineProvider="none"
                android:singleLine="true"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                android:textColorHighlight="#70BDBA"
                android:textColorHint="#363434"
                android:textColorLink="#050505"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText
                android:id="@+id/activity_login_et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:alpha="0.7"
                android:autofillHints=""
                android:background="@drawable/rounded_text_field"
                android:ems="10"
                android:fontFamily="sans-serif-thin"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:text=""
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="#363434"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--TextView
                android:id="@+id/activity_login_tv_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" /-->

            <Button
                android:id="@+id/activity_login_btn_forgot_password"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="sans-serif-thin"
                android:onClick="resetPassword"
                android:text="@string/forgot_password"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="top|center_vertical"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/activity_login_btn_email_login"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="5dp"
                        android:alpha="1"
                        android:background="@drawable/rounded_button"
                        android:backgroundTint="#FFA000"
                        android:fontFamily="sans-serif-thin"
                        android:onClick="emailLogin"
                        android:text="@string/login"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/activity_login_btn_google_login"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginBottom="5dp"
                        android:alpha="0.95"
                        android:background="@drawable/rounded_button"
                        android:backgroundTint="#FFFFFF"
                        android:drawableStart="@drawable/googleg_standard_color_18"
                        android:drawablePadding="24dp"
                        android:fontFamily="@font/roboto_medium"
                        android:onClick="googleLogin"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="@string/sign_in_with_google"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#4285F4"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/activity_login_btn_facebook_login"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginBottom="5dp"
                        android:alpha="0.95"
                        android:background="@drawable/rounded_button"
                        android:backgroundTint="#4267b2"

                        android:drawableStart="@drawable/f_logo"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif-thin"
                        android:onClick="facebookLogin"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="@string/login_with_facebook"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/activity_login_btn_register"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginBottom="5dp"
                        android:alpha="0.95"
                        android:background="@drawable/rounded_button"
                        android:fontFamily="sans-serif-thin"
                        android:onClick="registerNewUser"
                        android:text="@string/no_account_create_one"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ProgressBar
                        android:id="@+id/activity_login_pb_progress"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateDrawable="@drawable/progress"
                        android:visibility="invisible" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>